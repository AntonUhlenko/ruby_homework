<h1> Редактирование петиции </h1>

<%= form_for :petition, url: petition_path(@petition), method: :patch do |f| %>
    <% if @petition.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% @petition.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :Название %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </p>

    <p>
      <%= f.label :Описание %><br>
      <%= f.text_area :text, class: 'form-control', rows: 5 %>
    </p>

    <p>
      <%= f.submit "Сохранить изменения", class: 'btn btn-success pull-right' %>
    </p>
<% end %>