<h1> Новая петиция </h1>

<%= form_for :petition, url: petitions_path do |f| %>
    <% if @petition.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% @petition.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :Название %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :Описание %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit "Создать петицию" %>
    </p>
<% end %>