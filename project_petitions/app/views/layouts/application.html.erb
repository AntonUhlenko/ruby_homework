<!DOCTYPE html>
<html>
<head>
  <title>Petitions RubyBursa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div id="container">
      <div id="user_header">
        <p>  <%= link_to "Главная", root_path %> </p>
        <p>  <%= link_to "Все петиции", petitions_path %> </p>
        <% if current_user %>
            Logged in as <%= current_user.first_name + ' ' + current_user.last_name %>
            <%= link_to "Выйти", logout_path %>
            <p>  <%= link_to "Создание петиции", petitions_create_path  %> </p>
            <%= link_to "Мои петиции", my_petitions_path %>
        <% else %>
            <%= link_to "Регистрация", signup_path %> или
            <%= link_to "Вход", login_path %>
           <p> <%= link_to "Создание петиции", login_path %> </p>

        <% end %>
      </div>

      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, id: "flash_#{name}" %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
